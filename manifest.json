{
  "manifest_version": 2,
  "name": "Destiny Report",
  "version": "0.1",
  "description": "Track Gambit, Crucible and Raid stats",
  "content_scripts": [
    {
      "matches": ["https://www.bungie.net/en/ClanV2/PublicFireteam*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "/icons/Dr-48.png",
    "128": "/icons/DR-128.png"
  },
  "permissions": ["https://www.bungie.net/"]
}
